<theme>
	<formatVersion>7</formatVersion>

	<!-- Version -->
	<subset name="version" displayName="Atlas by mirko93s">
		<include name="version" displayName="v 1.0.2" />
	</subset>

	<!-- color palette -->
	<subset name="color" displayName="Color Scheme">
		<include name="dark" displayName="Default">./colors/dark.xml</include>
		<include name="everforest" displayName="Everforest">./colors/everforest.xml</include>
		<include name="everforest_light" displayName="Everforest Light">./colors/everforest_light.xml</include>
		<include name="dracula" displayName="Dracula">./colors/dracula.xml</include>
		<include name="nord" displayName="Nord">./colors/nord.xml</include>
		<include name="monokai_pro" displayName="Monokai Pro">./colors/monokai_pro.xml</include>
		<include name="monokai_pro_light" displayName="Monokai Pro Light">./colors/monokai_pro_light.xml</include>
		<include name="catppuccin_mocha" displayName="Catppuccin Mocha">./colors/catppuccin_mocha.xml</include>
		<include name="catppuccin_latte" displayName="Catppuccin Latte">./colors/catppuccin_latte.xml</include>
	</subset>

	<!-- animation -->
	<subset name="animation" displayName="Animations">
		<include name="on" displayName="On" />
		<include name="off" displayName="Off" />
	</subset>
	
	<!-- description scroll speed -->
	<subset name="scrollSpeed" displayName="Description Scroll Speed">
		<include name="default" displayName="Default" />
		<include name="fast" displayName="Fast" />
		<include name="faster" displayName="Faster" />
		<include name="fastest" displayName="Fastest" />
		<include name="slowest" displayName="Slowest" />
		<include name="slower" displayName="Slower" />
		<include name="slow" displayName="Slow" />
	</subset>

	<!-- video -->
	<subset name="video" displayName="Video Background">
		<include name="on" displayName="On" />
		<include name="off" displayName="Off (Save Battery)" />
	</subset>

	<!-- video delay-->
	<subset name="videoDelay" displayName="Video Delay">
		<include name="5" displayName="5 s" />
		<include name="10" displayName="10 s" />
		<include name="30" displayName="30 s" />
		<include name="0" displayName="Instant" />
	</subset>

	<!-- video opacity-->
	<subset name="videoOpacity" displayName="Video Opacity">
