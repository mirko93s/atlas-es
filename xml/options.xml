	<!-- Filters -->
	<subset name="crt" displayName="CRT Filter">
		<include name="off" displayName="Off"/>
		<include name="on" displayName="On">${themePath}/xml/shaders/crt.xml</include>
	</subset>

	<!-- font -->
	<subset name="font" displayName="Font">
		<include name="ubuntu" displayName="Ubuntu" />
		<include name="tektur" displayName="Tektur" />
		<include name="saira" displayName="Saira" />
	</subset>

	<!-- font size -->
	<subset name="font-size" displayName="Font Size">
		<include name="large" displayName="Large" />
		<include name="small" displayName="Small" />
		<include name="default" displayName="Medium" />
	</subset>

	<!-- condensed font in games list -->
	<subset name="fontCondensed" displayName="Font Condensed in Games List">
		<include name="on" displayName="On" />
		<include name="off" displayName="Off" />
	</subset>

	<!-- uppercase games -->
	<subset name="uppercaseGames" displayName="Uppercase Games">
